<?xml version='1.0' encoding='utf-8'?>
<widget id="org.joabetc.waiterapp" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Waiter App</name>
    <description>
        A sample Apache Cordova application for waiters of a fictional restaurant.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Joabe Tavares Costa
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <preference name="DisallowOverscroll" value="true" />
    </platform>
    <engine name="browser" spec="^5.0.3" />
    <engine name="android" spec="^7.0.0" />
    <preference name="Orientation" value="prortrait" />
    <preference name="Fullscreen" value="true" />
    <preference name="BackgroundColor" value="0xF2F2F2FF" />
</widget>
