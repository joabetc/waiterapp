<?xml version='1.0' encoding='utf-8'?>
<widget id="org.joabetc.waiterapp" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Waiter App</name>
    <description>
        A sample Apache Cordova application for waiters of a fictional restaurant.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Joabe Tavares Costa
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon density="ldpi" src="resources/android/icon/drawable-ldpi-icon.png"/>
        <icon density="mdpi" src="resources/android/icon/drawable-mdpi-icon.png"/>
        <icon density="hdpi" src="resources/android/icon/drawable-hdpi-icon.png"/>
        <icon density="xhdpi" src="resources/android/icon/drawable-xhdpi-icon.png"/>
        <icon density="xxhdpi" src="resources/android/icon/drawable-xxhdpi-icon.png"/>
        <icon density="xxxhdpi" src="resources/android/icon/drawable-xxxhdpi-icon.png"/>
        <splash density="port-ldpi" src="resources/android/splash/drawable-port-ldpi-screen.png"/>
        <splash density="port-mdpi" src="resources/android/splash/drawable-port-mdpi-screen.png"/>
        <splash density="port-hdpi" src="resources/android/splash/drawable-port-hdpi-screen.png"/>
        <splash density="port-xhdpi" src="resources/android/splash/drawable-port-xhdpi-screen.png"/>
        <splash density="port-xxhdpi" src="resources/android/splash/drawable-port-xxhdpi-screen.png"/>
        <splash density="port-xxxhdpi" src="resources/android/splash/drawable-port-xxxhdpi-screen.png"/>
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <preference name="DisallowOverscroll" value="true" />
        <icon src="resources/ios/icon/icon.png" height="57" width="57"/>
        <icon src="resources/ios/icon/icon@2x.png" height="114" width="114"/>
        <icon src="resources/ios/icon/icon-40.png" height="40" width="40"/>
        <icon src="resources/ios/icon/icon-40@2x.png" height="80" width="80"/>
        <icon src="resources/ios/icon/icon-50.png" height="50" width="50"/>
        <icon src="resources/ios/icon/icon-50@2x.png" height="100" width="100"/>
        <icon src="resources/ios/icon/icon-60.png" height="60" width="60"/>
        <icon src="resources/ios/icon/icon-60@2x.png" height="120" width="120"/>
        <icon src="resources/ios/icon/icon-60@3x.png" height="180" width="180"/>
        <icon src="resources/ios/icon/icon-72.png" height="72" width="72"/>
        <icon src="resources/ios/icon/icon-72@2x.png" height="144" width="144"/>
        <icon src="resources/ios/icon/icon-76.png" height="76" width="76"/>
        <icon src="resources/ios/icon/icon-76@2x.png" height="152" width="152"/>
        <icon src="resources/ios/icon/icon-small.png" height="29" width="29"/>
        <icon src="resources/ios/icon/icon-small@2x.png" height="58" width="58"/>
        <icon src="resources/ios/icon/icon-small@3x.png" height="87" width="87"/>
        <splash src="resources/ios/splash/Default-568h@2x~iphone.png" height="1136" width="640"/>
        <splash src="resources/ios/splash/Default-667h.png" height="1334" width="750"/>
        <splash src="resources/ios/splash/Default-736h.png" height="2208" width="1242"/>
        <splash src="resources/ios/splash/Default-Portrait@2x~ipad.png" height="2048" width="1536"/>
        <splash src="resources/ios/splash/Default-Portrait~ipad.png" height="1024" width="768"/>
        <splash src="resources/ios/splash/Default@2x~iphone.png" height="960" width="640"/>
        <splash src="resources/ios/splash/Default~iphone.png" height="480" width="320"/>
    </platform>
    <platform name="windows">
        <icon src="resources/windows/icon/Square150x150Logo.scale-100.png" height="150" width="150"/>
        <icon src="resources/windows/icon/Square150x150Logo.scale-240.png" height="360" width="360"/>
        <icon src="resources/windows/icon/Square30x30Logo.scale-100.png" height="30" width="30"/>
        <icon src="resources/windows/icon/Square310x310Logo.scale-100.png" height="310" width="310"/>
        <icon src="resources/windows/icon/Square44x44Logo.scale-240.png" height="106" width="106"/>
        <icon src="resources/windows/icon/Square70x70Logo.scale-100.png" height="70" width="70"/>
        <icon src="resources/windows/icon/Square71x71Logo.scale-240.png" height="170" width="170"/>
        <icon src="resources/windows/icon/StoreLogo.scale-100.png" height="50" width="50"/>
        <icon src="resources/windows/icon/StoreLogo.scale-240.png" height="120" width="120"/>
        <icon src="resources/windows/icon/Wide310x150Logo.scale-100.png" height="150" width="310"/>
        <icon src="resources/windows/icon/Wide310x150Logo.scale-240.png" height="360" width="744"/>
        <splash src="resources/windows/splash/SplashScreen.scale-100.png" height="300" width="620"/>
        <splash src="resources/windows/splash/SplashScreen.scale-240.png" height="1920" width="1152"/>
        <splash src="resources/windows/splash/SplashScreenPhone.scale-240.png" height="1920" width="1152"/>
    </platform>
    <engine name="browser" spec="^5.0.3" />
    <engine name="android" spec="^7.0.0" />
    <preference name="Orientation" value="prortrait" />
    <preference name="Fullscreen" value="true" />
    <preference name="BackgroundColor" value="0xF2F2F2FF" />
    <preference value="screen" name="SplashScreen"/>
    <preference value="3000" name="SplashScreenDelay"/>
    <plugin name="cordova-plugin-splashscreen" spec="^5.0.1" />
</widget>
